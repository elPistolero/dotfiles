#!/bin/bash

trayer --edge top --align right --SetDockType true --SetPartialStrut true \
     --expand true --width 5 --transparent true --alpha 1 --tint 0x282828 --height 17 &

setxkbmap -layout de -variant nodeadkeys -option 'grp:alt_shift_toggle' &

xsetroot -cursor_name left_ptr

xscreensaver -no-splash &

nm-applet &

pasystray -n &

feh --bg-scale $HOME/Pictures/color_poly.jpg &

synclient TapButton1=1 TapButton2=3 TapButton3=2 HorizTwoFingerScroll=1

mkdir -p /tmp/coredumps/1065/

export LANG=en_US.UTF-8
export LC_MEASUREMENT=de_DE.UTF-8
export LC_TIME=de_DE.UTF-8
export LC_PAPER=de_DE.UTF-8
wmname LG3D
